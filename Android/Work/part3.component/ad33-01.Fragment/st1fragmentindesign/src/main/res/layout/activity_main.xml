            android:id="@+id/btn_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지"/>
        
    </LinearLayout>
    <fragment
        android:id="@+id/fragmentthree"
        android:name="example.com.fragment.FragmentThree"
