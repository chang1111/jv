    <!-- Application Loggers -->
    <logger name="com.spring67.upload">
        <level value="info" />
    </logger>
    
    <!-- 3rdparty Loggers -->
    <logger name="org.springframework.core">
        <level value="info" />
    </logger>
    
    <logger name="org.springframework.beans">
        <level value="info" />
    </logger>
    
    <logger name="org.springframework.context">
        <level value="info" />
    </logger>

    <logger name="org.springframework.web">
        <level value="info" />
    </logger>
    
    <!-- java.sql Loggers -->
    <category name="java.sql.Connection">
        <priority value="debug" />
        <appender-ref ref="console" />
    </category>
    <category name="java.sql.Statment">
        <priority value="debug" />
        <appender-ref ref="console" />
    </category>
    <category name="java.sql.PreparedStatment">
        <priority value="debug" />
        <appender-ref ref="console" />
    </category>
    <category name="java.sql.ResultSet">
        <priority value="debug" />
        <appender-ref ref="console" />
    </category>
    
    <!-- Here we set the packages in which logs will be implemented -->
    <logger name="com.alfa1lab.logger">
        <appender-ref ref = "console" />
        <appender-ref ref = "rolling" />
        <!-- <appender-ref ref = "DB" /> -->
        <!-- <appender-ref ref = "XML" /> -->
    </logger>


    <!-- Root Logger -->
    <root>
        <!-- log level 에는 레벨에는 error, fatal, info, warn, debug 등이 있다. -->
        <level value="debug" /> 
        <appender-ref ref="console" />
        <appender-ref ref="rolling" />
    </root>
    
</log4j:configuration>
